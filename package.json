{
  "name": "dart-idx-generator",
  "displayName": "dart_idx_generator",
  "description": "Generate index.dart files for your Flutter and Dart Projects.",
  "publisher": "timokz",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/timokz/dart-idx-generator"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "onCommand:dart-idx-generator.generateFile",
    "onCommand:dart-idx-generator.generateFiles",
    "onCommand:dart-idx-generator.deleteIndexFiles"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dart-idx-generator.generateFile",
        "title": "Dart: Generate index.dart file for current directory"
      },
      {
        "command": "dart-idx-generator.generateFiles",
        "title": "Dart: Generate index.dart files for whole project"
      },
      {
        "command": "dart-idx-generator.deleteIndexFiles",
        "title": "Dart: Delete all index.dart files"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "ts-loader": "^9.4.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "@vscode/test-electron": "^2.2.0"
  }
}